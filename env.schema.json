{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Environment Variables",
  "description": "The environment variables schema for the Safe Places server",
  "type": "object",
  "properties": {
    "JWT_SECRET": {
      "type": "string"
    },
    "PORT": {
      "type": "integer"
    },
    "DB_HOST": {
      "type": "string"
    },
    "DB_PASS": {
      "type": "string"
    },
    "DB_USER": {
      "type": "string"
    },
    "DB_NAME": {
      "type": "string"
    },
    "DB_HOST_PUB": {
      "type": "string"
    },
    "DB_PASS_PUB": {
      "type": "string"
    },
    "DB_USER_PUB": {
      "type": "string"
    },
    "DB_NAME_PUB": {
      "type": "string"
    },
    "JWT_EXP": {
      "type": "integer"
    },
    "PUBLISH_STORAGE_TYPE": {
      "type": "string",
      "enum": ["gcs", "aws", "local"]
    },
    "GOOGLE_APPLICATION_CREDENTIALS": {
      "type": "string"
    },
    "GOOGLE_CLOUD_PROJECT": {
      "type": "string"
    },
    "GCLOUD_STORAGE_BUCKET": {
      "type": "string"
    },
    "S3_BUCKET": {
      "type": "string"
    },
    "S3_REGION": {
      "type": "string"
    },
    "S3_ACCESS_KEY": {
      "type": "string"
    },
    "S3_SECRET_KEY": {
      "type": "string"
    },
    "HASHING_TEST": {
      "type": "integer"
    },
    "DISPLAY_ERROR_MESSAGE": {
      "type": "integer"
    },
    "GCLOUD_STORAGE_PATH": {
      "type": "string"
    },
    "GOOGLE_SECRET": {
      "type": "string"
    },
    "DOMAIN": {
      "type": "string",
      "format": "hostname"
    },
    "AUTH0_BASE_URL": {
      "type": "string",
      "format": "url"
    },
    "AUTH0_CLIENT_ID": {
      "type": "string"
    },
    "AUTH0_CLIENT_SECRET": {
      "type": "string"
    },
    "AUTH0_API_AUDIENCE": {
      "type": "string",
      "format": "url"
    },
    "AUTH0_CLAIM_NAMESPACE": {
      "type": "string",
      "format": "url"
    },
    "AUTH0_REALM": {
      "type": "string"
    }
  },
  "required": [
    "JWT_SECRET",
    "PORT",
    "DB_HOST",
    "DB_PASS",
    "DB_USER",
    "DB_NAME",
    "DB_HOST_PUB",
    "DB_PASS_PUB",
    "DB_USER_PUB",
    "DB_NAME_PUB",
    "JWT_EXP",
    "PUBLISH_STORAGE_TYPE"
  ]
}
